#!/bin/bash -e
nre_debug=$(snapctl get nre-debug)
if [ $nre_debug -gt 0 ]; then
	export nre_debug
fi
env
ARGS="/console"
if [ "$(snapctl get niagarad.trace)" = "true" ]; then
	ARGS="$ARGS /trace"
fi
echo ARGS=$ARGS
sleep infinity | setpriv --reuid 5011 --regid 5011 --keep-groups -- $SNAP/bin/niagarad $ARGS "$@"
